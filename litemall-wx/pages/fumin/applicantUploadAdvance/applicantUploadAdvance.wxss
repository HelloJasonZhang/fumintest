@import "../../../lib/wxParse/wxParse.wxss";

page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.container {
  height: 100%;
  width: 100%;
}

.header-container {
  margin: 20rpx 20rpx 20rpx 20rpx;
}

.applicant-upload-list {
  background-size: auto 10.5rpx;
  margin-bottom: 90rpx;
}

.applicant-upload-list .item {
  display:flex; 
  height: 280rpx;
  align-items: center;
  margin: 30rpx 0rpx; 
  background: #fff;
}

.applicant-upload-list .l {
  margin: 0rpx 40rpx; 
  align-items: center;
  width: 50vm;
}

.applicant-upload-list .name {
  margin: 0rpx 10rpx; 
  font-size: 25rpx;
  color: #333;
  margin-bottom: 5.2rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.applicant-upload-list .default {
  width: 62.5rpx;
  height: 33rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 20rpx;
  color: #b4282d;
  border: 1rpx solid #b4282d;
  visibility: visible;
}

.applicant-upload-list .c {
  flex: 1;
  height: auto;
  overflow: hidden;
}

.applicant-upload-list .mobile {
  height: 29rpx;
  font-size: 29rpx;
  line-height: 29rpx;
  overflow: hidden;
  color: #333;
  margin-bottom: 6.25rpx;
}

.applicant-upload-list .address {
  height: 37rpx;
  font-size: 25rpx;
  line-height: 37rpx;
  overflow: hidden;
  color: #666;
}

.applicant-upload-list .r {
  width: 52rpx;
  height: auto;
  overflow: hidden;
  margin-right: 16.5rpx;
}

.applicant-upload-list .del {
  display: block;
  width: 52rpx;
  height: 52rpx;
}


.btns {
  bottom: 0;
  left: 0;
  overflow: hidden;
  display: flex;
  height: 100rpx;
  width: 100%;
}

.btns .save {
  flex: 1;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 38rpx;
  color: #fff;
  border: none;
  border-radius: 0;
  background: #5677fe;
}

.add-wrap {
  position:fixed;
  right:0rpx;
  top: 0rpx;
  display:flex;
  width:100%;
  justify-content:flex-end;
}

.empty-view {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-view .text {
  width: auto;
  font-size: 28rpx;
  line-height: 35rpx;
  color: #999;
}


.weui-uploader__files {
  width: 100%;
  margin: 30rpx;
}

.weui-uploader__file {
  float: left;
  margin-right: 9px;
  margin-bottom: 9px;
}

.weui-uploader__img {
  display: block;
  width: 140rpx;
  height: 140rpx;
}

.weui-uploader__input-box {
  float: left;
  position: relative;
  margin-right: 9px;
  margin-bottom: 9px;
  width: 75px;
  height: 75px;
  border: 1px solid #d9d9d9;
}

.weui-uploader__input-box:after, .weui-uploader__input-box:before {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}

.weui-uploader__input-box:before {
  width: 2px;
  height: 39.5px;
}

.weui-uploader__input-box:after {
  width: 39.5px;
  height: 2px;
}

.weui-uploader__input-box:active {
  border-color: #999;
}

.weui-uploader__input-box:active:after, .weui-uploader__input-box:active:before {
  background-color: #999;
}

.weui-uploader__input {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.round-click{
    height: 180rpx;
    width: 60rpx;
    background-color: #d92a2a;
    border-top-left-radius: 20%;
    border-bottom-left-radius: 20%;
    position: fixed;
    bottom: 70%;
    right: 0rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.round-click navigator{
    font-size: 26rpx;
    max-width: 50rpx;
    color: #fff;
    text-align: center;
}

.signatureBtnBox {
  position: absolute;
}

.signatureBtnBox .signatureBtn {
  position: relative;
  left: 200rpx;
  max-width: 200rpx;
  background: #5677fe;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 38rpx;
  color: #fff;
  border: none;
  border-radius: 20%;
}

.applicant-upload-list .item-signature {
  display:flex; 
  height: 100rpx;
  align-items: center;
  margin: 30rpx 0rpx 10rpx 0rpx; 
  background:#fff;
}

.aplicant-upload .item-signature .document-box {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.aplicant-upload .item-signature .link-tips {
  font-size: 25rpx;
  color: #A7A9AA
}

.aplicant-upload .item-signature  .link-text {
  font-size: 25rpx;
  color: #5677fe;
}