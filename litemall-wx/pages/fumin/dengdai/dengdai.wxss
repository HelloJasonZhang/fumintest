page {
  height: 100%;
  background: #f4f4f4;
}

.dengdai .bg {
  width: 80vw; 
  height: 45vh; 
  position:absolute;  
  left: 20px; 
  top:150px; 
}

.dengdai .add-form {
  background: #fff;
  width: 100%;
  height: auto;
  overflow: hidden;
}

.dengdai .form-item {
  height: 136rpx;
  padding-left: 31.25rpx;
  border-bottom: 1px solid #f0f0f0;
  display: flex;
  align-items: center;
  padding-right: 31.25rpx;
}

.dengdai .input {
  flex: 1;
  height: 60rpx;
  line-height: 44rpx;
  overflow: hidden;
  color: #333333;
  font-size: 36rpx;
}

.dengdai .lable {
  font-weight: bold;
  color: #333333;
  font-size: 40rpx;
}

.dengdai .form-default {
  border-bottom: 1px solid #d9d9d9;
  height: 96rpx;
  background: #fff;
  padding-top: 28rpx;
  font-size: 28rpx;
  padding-left: 31.25rpx;
}

.dengdai .form-default .van-checkbox .van-icon {
  color: #fff;
}

.dengdai .btns {
  position: relative;
  bottom: 0;
  left: 0;
  top: 50rpx;
  overflow: hidden;
  display: flex;
  height: 100rpx;
  width: 100%;
}

.dengdai .cannel, .dengdai .save {
  flex: 1;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #fff;
  border: none;
  border-radius: 0;
}

.dengdai .cannel {
  background: #333;
}

.dengdai .save {
  background: #ffab4b;
  border-radius: 50rpx;
}
